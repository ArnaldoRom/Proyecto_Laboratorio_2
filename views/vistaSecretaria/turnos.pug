link(rel="stylesheet", href="/css/secretaria/turnos.css")
div(id="contenedor-principal", class="contenedor-principal")
  div(id="formulario-turnos", class="form-turnos")
    h2 Nuevo Evento 
    form
      label(for="nombre") Profecional
      input(type="text", id="nombre", placeholder="Nombre del profesional")

      label(for="especialidad") Especialidad 
      input(type="text", id="especialidad", placeholder="Especialidad")

      button(type="submit", id="enviar-form-turno") BUSCAR


  div(id="contenedor-turno", class="contenedor-turno")
    h2 Turnos Disponibles
    table(id="tabla-turno", class="tabla-turno") 
      thead 
        tr  
          th HORA
          th LUNES
          th MARTES 
          th MIERCOLES 
          th JUEVES
          th VIERNES
      tbody 
  dialog(id="modal-cargaTurno", class="contenedor-modal")
    h2 Cargar Turno 
    form(method="dialog")
      label(for="dni") DNI
      input(type="text", id="dni")

      label(for="nombreTurno") Nombre
      input(type="text", id="nombreTurno")

      label(for="apellido") Apellido 
      input(type="text", id="apellido")

      //- label(for="motivo") Motivo Consulta 
      //- input(type="text", id="motivo")

      label(for="obra") Obra Social 
      input(type="text", id="obra")

      button(type="submit", id="enviar-form-cargaTurno") Confirmar  

      //- button(Type="submit",id="enviar-form-paciente")

  dialog(id="exito-turnos", class="contenedor-exito") ✅ Agregado con éxito